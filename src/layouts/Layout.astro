---
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link
            rel="icon"
            type="image/svg+xml"
            href="/portfolio-front/favicon.svg"
        />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body
        class="p-0 m-0 bg-[rgb(18,18,18)] text-white h-screen snap-y snap-mandatory overflow-scroll z-0"
    >
        <slot />
    </body>
</html>
