---
export interface Props {
    title: string;
}

const { title } = Astro.props;
import Header from '../components/Header';
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link
            rel="icon"
            type="image/svg+xml"
            href="/portfolio-front/favicon.svg"
        />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body
        class="p-0 m-0 bg-[rgb(18,18,18)] text-white snap-y snap-mandatory overflow-y-scroll overflow-x-hidden z-0 relative"
    >
        <Header client:load/>
        <slot />
    </body>
</html>

<style is:global>
    @import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@300&display=swap');

    :root {
        font-family: 'JetBrains Mono', monospace;
    }
</style>
